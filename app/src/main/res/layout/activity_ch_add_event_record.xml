<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundnew"
    tools:context=".CHAddUpdateEventActivity">

    <!--EditText: Input user temple name-->

    <EditText
        android:id="@+id/nameGiving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtgiving"
        android:inputType="textPersonName|textCapWords"
        android:padding="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="12sp" />

    <!--EditText: Input user temple history-->

    <EditText
        android:id="@+id/givingDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameGiving"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:gravity="start"
        android:hint="@string/txtgivingDes"
        android:inputType="textCapSentences|textMultiLine"
        android:minHeight="90dp"
        android:padding="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="12sp" />

    <!--EditText: Input user temple establishment-->

    <EditText
        android:id="@+id/givingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/givingDes"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtDateF"
        android:inputType="date"
        android:padding="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="12sp" />

    <!--EditText: Input user monk name-->

    <EditText
        android:id="@+id/givingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/givingDate"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtTimeF"
        android:inputType="textPersonName|textCapWords"
        android:padding="20dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="12sp" />


    <!--FAB: Add/Update Record-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveEventBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="31dp"
        android:padding="30dp"
        android:src="@drawable/done"
        app:backgroundTint="@color/textBlack" />


</RelativeLayout>