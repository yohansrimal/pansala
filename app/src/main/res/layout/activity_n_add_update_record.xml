<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffe6cc"
    tools:context=".NAddUpdateRecordActivity">

    <!--Image View: Temple Image-->

    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/templenew"
        app:c_border="true"
        app:c_border_color="@android:color/holo_orange_dark"
        app:c_border_width="4dp" />

    <!--EditText: Input user temple name-->

    <EditText
        android:id="@+id/nameTemple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileIv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtname"
        android:inputType="textPersonName|textCapWords"
        android:padding="20dp"
        android:textColor="@android:color/background_dark"

        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="13sp" />

    <!--EditText: Input user temple history-->

    <EditText
        android:id="@+id/historyTemple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTemple"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:gravity="start"
        android:hint="@string/txthistory"
        android:inputType="textCapSentences|textMultiLine"
        android:minHeight="90dp"
        android:padding="20dp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="13sp" />

    <!--EditText: Input user temple establishment-->

    <EditText
        android:id="@+id/dateTemple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/historyTemple"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtbegin"
        android:inputType="date"
        android:padding="20dp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="13sp" />

    <!--EditText: Input user monk name-->

    <EditText
        android:id="@+id/monkName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTemple"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtmonk"
        android:inputType="textPersonName|textCapWords"
        android:padding="20dp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="13sp" />

    <!--EditText: Input user monk designation-->

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monkName"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtlocation"
        android:inputType="textPersonName|textCapWords"
        android:padding="20dp"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="13sp" />

    <!--EditText: Input user monk Contact number-->

    <EditText
        android:id="@+id/monkTele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/shape_rectangle"
        android:hint="@string/txtmonkcon"
        android:padding="20dp"
        android:inputType="number"
        android:singleLine="true"
        android:maxLength="10"
        android:textColor="@android:color/background_dark"
        android:textColorHint="@android:color/holo_orange_dark"
        android:textSize="13sp" />

    <!--FAB: Add/Update Record-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveBtn"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="31dp"
        android:padding="30dp"
        android:src="@drawable/done"
        app:backgroundTint="@android:color/holo_orange_dark" />


</RelativeLayout>